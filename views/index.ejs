<%- layout('layouts/boilerplate') %>
<title>Customer Support</title>
</head>
<body class="d-flex flex-column">
  <h1 class="text-center my-3">Customer Support</h1>

  <div class="row w-100">
    <h1 class="text-center">Send us your requests or issues.</h1>
    <div class="col-6 offset-3 mt-3">
      <form
        action="/"
        method="post"
        class="needs-validation"
        novalidate
        enctype="multipart/form-data"
      >
        <div class="form-group mb-3">
          <label for="name">Name</label>
          <input
            type="text"
            name="cs[name]"
            id="name"
            class="form-control"
            required
            placeholder="Name"
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter your name.</div>
        </div>

        <div class="form-group mb-3">
          <label for="website">Website</label>
          <select
            aria-label="Default select example"
            id="website"
            name="website"
            class="form-control mb-3 form-select"
            required
          >
            <% for (let s of sites ) { %>
            <option value="<%= s._id %>"><%= s.name %></option>
            <%} %>
          </select>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please select your website.</div>
        </div>
        <div class="form-group mb-3">
          <label for="issue">Issue or Request</label>
          <input
            type="text"
            id="issue"
            name="cs[issue]"
            class="form-control mb-3"
            required
            placeholder="Issue or Request"
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">
            Please tell us about your issue or request.
          </div>
        </div>

        <div class="form-group mb-3">
          <label for="image">Optional Image</label>
          <input type="file" id="image" name="img" class="form-control mb-3" />
        </div>
        <button type="submit" class="btn btn-success btn-block">Submit</button>
      </form>
    </div>
  </div>
</body>
